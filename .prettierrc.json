{
  "singleQuote": true,
  "semi":false,
  "overrides": [
    {
      "files":"*.js",
      "options":{
        "semi":true
      }
    },
    {
      "files":"*.json",
      "options":{
        "parser":"json-stringify"
      }
    }
  ],
  "printWidth": 100,
  "tabWidth": 2,
  "useTabs": true,
  "trailingComma": "all",
  "bracketSpacing": true,
  "jsxSingleQuote": false,
  "arrowParens": "avoid"
}